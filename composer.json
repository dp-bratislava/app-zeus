{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "bdilhof/dpb-laravel-base",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/filament-admin-panel.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/laravel-user-admin.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/laravel-datahub-sync.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/dpb-employee-manager.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/dpb-utils.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/dpb-work-time-fund.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dp-bratislava/dpb-work-time-fund-filament.git"
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-tickets",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-tasks",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-activities",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-work-log",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-vehicles",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "packages/dpb/pkg-entity-manager",
            "options": {
                "symlink": true
            }
        }        
    ],
    "require": {
        "php": "^8.2",
        "awcodes/filament-table-repeater": "^3.1",
        "deployer/deployer": "^7.4",
        "dpb/dpb-employee-manager": "^1.0",
        "dpb/dpb-utils": "^1.0",
        "dpb/dpb-work-time-fund": "^1.0",
        "dpb/dpb-work-time-fund-filament": "^1.0",
        "dpb/filament-admin-panel": "^12.0",
        "dpb/laravel-datahub-sync": "^12.0",
        "dpb/laravel-user-admin": "^12.0",

        "andrej-horny/pkg-activities": "dev-main",
        "andrej-horny/pkg-tasks": "dev-main",
        "andrej-horny/pkg-tickets": "dev-main",
        "andrej-horny/pkg-work-log": "dev-main",
        "andrej-horny/pkg-vehicles": "dev-main",
        "andrej-horny/pkg-entity-manager": "dev-main",

        "filament/spatie-laravel-media-library-plugin": "^3.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-package-tools": "^1.92",
        "spatie/laravel-schedule-monitor": "^3.10",
        "symfony/dotenv": "^7.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.43",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi",
            "@php -r \"echo 'Spúšťam Sail...\\n';\"",
            "@php -r \"passthru('vendor/bin/sail up -d');\"",
            "@php -r \"echo 'Čakám na Sail kontajnery...\\n'; sleep(15);\"",
            "@php -r \"passthru('vendor/bin/sail artisan migrate --graceful --ansi');\"",
            "@php -r \"passthru('vendor/bin/sail artisan db:seed --ansi');\""
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
