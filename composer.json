{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "dpb/dpb-wtf-tms-app",
    "type": "project",
    "description": "WTF & TMS in one app",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*",
            "options": {
                "symlink": true
            }
        },
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-auditing.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-departments.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-employee-manager.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-insights.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-master-permission-guard.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-spotlight.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-utils.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-work-time-fund-filament.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-work-time-fund.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/dpb-wtf-tms-bridge.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/ext-spatie-model-states.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/filament-admin-panel.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/laravel-datahub-sync.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/laravel-user-admin.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-activities.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-batchable.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-devices.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-eav.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-fleet.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-inspections.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-task-ms-ui.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-task-ms.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-tasks.git"},
        {"type": "vcs", "url": "git@github.com:dp-bratislava/pkg-tickets.git"}
    ],
    "require": {
        "php": "^8.2",
        "awcodes/filament-table-repeater": "^3.1",
        "deployer/deployer": "^7.4",
        "dpb/dpb-wtf-tms-bridge": "^12.0",
        "dpb/filament-admin-panel": "^12.1",
        "dpb/laravel-datahub-sync": "^12.4",
        "dpb/laravel-user-admin": "^3.0",
        "filament/spatie-laravel-media-library-plugin": "^3.2",
        "laravel/framework": "^12.0",
        "laravel/nightwatch": "^1.22",
        "laravel/tinker": "^2.10.1",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-data": "^4.17",
        "spatie/laravel-model-states": "^2.12",
        "spatie/laravel-package-tools": "^1.92",
        "spatie/laravel-schedule-monitor": "^3.10",
        "symfony/dotenv": "^7.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.43",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi",
            "@php -r \"echo 'Spúšťam Sail...\\n';\"",
            "@php -r \"passthru('vendor/bin/sail up -d');\"",
            "@php -r \"echo 'Čakám na Sail kontajnery...\\n'; sleep(15);\"",
            "@php -r \"passthru('vendor/bin/sail artisan migrate --graceful --ansi');\"",
            "@php -r \"passthru('vendor/bin/sail artisan db:seed --ansi');\""
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        },        
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
